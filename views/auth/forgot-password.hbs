{{#if errors}}
{{#each errors}}
<div class="alert alert-danger">{{this.msg}}</div>
{{/each}}
{{/if}}
{{#if success_msg}}
<div class="alert alert-success">{{success_msg}}</div>
{{/if}}
{{#if error_msg}}
<div class="alert alert-danger">{{error_msg}}</div>
{{/if}}

<div style="text-align: center; margin-bottom: 20px;">
    <i class="bi bi-key" style="font-size: 48px; color: #818cf8;"></i>
    <h4 style="color: #fff; margin-top: 16px;">Parolni tiklash</h4>
    <p style="color: rgba(255,255,255,0.6); font-size: 14px;">Telefon raqamingizga tasdiqlash kodi yuboriladi</p>
</div>

<form action="/auth/forgot-password" method="POST">
    <div class="form-group">
        <label>Telefon raqam</label>
        <input type="text" name="phone" placeholder="+998 90 123 45 67" value="{{phone}}" required>
    </div>
    <button type="submit" class="btn btn-primary">Kod yuborish</button>
</form>

<div class="auth-footer">
    <a href="/auth/doctor/login">‚Üê Kirish sahifasiga qaytish</a>
</div>