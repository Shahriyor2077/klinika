{{#if errors}}
{{#each errors}}
<div class="alert alert-danger">{{this.msg}}</div>
{{/each}}
{{/if}}

<div style="text-align: center; margin-bottom: 20px;">
    <i class="bi bi-shield-lock" style="font-size: 48px; color: #818cf8;"></i>
    <h4 style="color: #fff; margin-top: 16px;">Yangi parol o'rnatish</h4>
    <p style="color: rgba(255,255,255,0.6); font-size: 14px;"><strong>{{phone}}</strong> raqamiga kod yuborildi</p>
</div>

<form action="/auth/reset-password" method="POST">
    <input type="hidden" name="phone" value="{{phone}}">
    <input type="hidden" name="sessionToken" value="{{sessionToken}}">

    <div class="form-group">
        <label>Tasdiqlash kodi</label>
        <input type="text" name="otp" placeholder="6 xonali kod" maxlength="6" pattern="\d{6}" required
            style="text-align: center; font-size: 18px; letter-spacing: 6px;">
    </div>
    <div class="form-group">
        <label>Yangi parol</label>
        <input type="password" name="password" placeholder="Kamida 6 ta belgi" minlength="6" required>
    </div>
    <div class="form-group">
        <label>Parolni tasdiqlang</label>
        <input type="password" name="password2" placeholder="Parolni qayta kiriting" minlength="6" required>
    </div>
    <button type="submit" class="btn btn-primary">Parolni o'zgartirish</button>
</form>

<div class="auth-footer">
    <a href="/auth/forgot-password">‚Üê Orqaga qaytish</a>
</div>