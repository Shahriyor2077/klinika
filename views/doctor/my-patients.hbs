{{> doctor-sidebar activePage="my-patients"}}

<div class="main-content">
    {{> alerts}}

    <div class="page-header">
        <h1 class="page-title"><i class="bi bi-person-check-fill me-2"></i>Mening bemorlarim</h1>
        <p class="page-subtitle">Siz tashxis qo'ygan bemorlar ro'yxati</p>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            {{#if patients.length}}
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Kod</th>
                            <th>Ism</th>
                            <th>PNFL</th>
                            <th>Jinsi</th>
                            <th>Yoshi</th>
                            <th>Viloyat</th>
                            <th>Oxirgi tashxis</th>
                            <th>Amallar</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each patients}}
                        <tr>
                            <td><span class="badge bg-primary">{{this.patient_code}}</span></td>
                            <td class="fw-semibold">{{this.name}}</td>
                            <td><code>{{this.child_pnfl}}</code></td>
                            <td>{{getSex this.sex}}</td>
                            <td>{{this.age}} yosh</td>
                            <td>{{getRegionName this.region}}</td>
                            <td>
                                {{#if this.lastDiagnosisDate}}
                                <span class="badge bg-light text-dark">{{formatDate this.lastDiagnosisDate}}</span>
                                {{else}}
                                -
                                {{/if}}
                            </td>
                            <td>
                                <a href="/doctor?q={{this.child_pnfl}}" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye me-1"></i>Ko'rish
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            {{> pagination}}
            {{else}}
            <div class="text-center py-5">
                <i class="bi bi-people fs-1 text-muted opacity-25 d-block mb-3"></i>
                <h5 class="text-muted">Hali bemorlar yo'q</h5>
                <p class="text-muted">Siz tashxis qo'ygan bemorlar bu yerda ko'rinadi</p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPatientModal">
                    <i class="bi bi-plus-lg me-2"></i>Bemor qo'shish
                </button>
            </div>
            {{/if}}
        </div>
    </div>
</div>

{{> doctor-modals}}