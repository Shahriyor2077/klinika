{{> admin-sidebar activePage="diagnoses"}}

<div class="main-content">
    {{> alerts}}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold m-0"><i class="bi bi-pencil me-2"></i>Tashxisni tahrirlash</h2>
        <a href="/admin/diagnoses" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Orqaga
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h6 class="m-0"><i class="bi bi-person me-2"></i>Bemor: {{diagnosis.patient.name}}
                ({{diagnosis.patient.patient_code}})</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <small class="text-muted">PNFL</small>
                    <p class="fw-bold">{{diagnosis.patient.child_pnfl}}</p>
                </div>
                <div class="col-md-4">
                    <small class="text-muted">Jinsi</small>
                    <p>{{getSex diagnosis.patient.sex}}</p>
                </div>
                <div class="col-md-4">
                    <small class="text-muted">Yoshi</small>
                    <p>{{diagnosis.patient.age}} yosh</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form method="POST" action="/admin/diagnoses/edit/{{diagnosis._id}}">
                <div class="row g-4">
                    <div class="col-lg-4">
                        <h6 class="text-success fw-bold mb-3 border-bottom pb-2">Asosiy ma'lumotlar</h6>
                        <div class="mb-3">
                            <label class="form-label">Shikoyatlar <span class="text-danger">*</span></label>
                            <textarea name="shikoyat" class="form-control" rows="3"
                                required>{{diagnosis.shikoyat}}</textarea>
                        </div>
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label class="form-label">Vazn (kg) <span class="text-danger">*</span></label>
                                <input type="number" step="0.01" name="ogirligi" class="form-control"
                                    value="{{diagnosis.ogirligi}}" required>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Bo'y (sm) <span class="text-danger">*</span></label>
                                <input type="number" name="boyi" class="form-control" value="{{diagnosis.boyi}}"
                                    required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tashxis <span class="text-danger">*</span></label>
                            <textarea name="tashxis" class="form-control" rows="3"
                                required>{{diagnosis.tashxis}}</textarea>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <h6 class="text-success fw-bold mb-3 border-bottom pb-2">Testlar</h6>
                        <div class="mb-3">
                            <label class="form-label">Spirometriya</label>
                            <input type="text" name="spirometriya" class="form-control"
                                value="{{diagnosis.spirometriya}}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">IRT natijasi</label>
                            <input type="text" name="irt" class="form-control" value="{{diagnosis.irt}}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sweat test</label>
                            <input type="text" name="sweat_test" class="form-control" value="{{diagnosis.sweat_test}}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Genetik test</label>
                            <textarea name="genetik_test" class="form-control"
                                rows="3">{{diagnosis.genetik_test}}</textarea>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <h6 class="text-success fw-bold mb-3 border-bottom pb-2">Davolash</h6>
                        <div class="mb-3">
                            <label class="form-label">Davolash <span class="text-danger">*</span></label>
                            <textarea name="davolash" class="form-control" rows="3"
                                required>{{diagnosis.davolash}}</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Dorilar</label>
                            <select name="dorilar" class="form-select" multiple style="height: 120px;">
                                {{#each drugs}}
                                <option value="{{this._id}}" {{checked ../diagnosis.dorilar this._id}}>{{this.name}}
                                </option>
                                {{/each}}
                            </select>
                            <small class="text-muted">Ctrl tugmasini bosib bir nechta tanlang</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Izohlar</label>
                            <input type="text" name="izohlar" class="form-control" value="{{diagnosis.izohlar}}">
                        </div>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top text-end">
                    <a href="/admin/diagnoses" class="btn btn-light px-4 me-2">Bekor qilish</a>
                    <button type="submit" class="btn btn-success px-5">
                        <i class="bi bi-check-lg me-2"></i>Saqlash
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>