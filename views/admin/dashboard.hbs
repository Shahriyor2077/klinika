{{> admin-sidebar activePage="dashboard"}}

<div class="main-content">
    {{> alerts}}

    <div class="page-header d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Dashboard</h1>
            <p class="page-subtitle">Tizim statistikasi va umumiy ko'rinish</p>
        </div>
        <div class="d-flex align-items-center gap-3">
            <span class="badge bg-light text-dark px-3 py-2 fs-6">
                <i class="bi bi-calendar3 me-2"></i>
                <span id="currentDate"></span>
            </span>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-4 animate-fade-in" style="animation-delay: 0.1s">
            <div class="stat-card">
                <div class="icon-box bg-primary bg-opacity-10 text-primary">
                    <i class="bi bi-people-fill"></i>
                </div>
                <div class="stat-label">Jami Bemorlar</div>
                <div class="stat-value">{{stats.patients}}</div>
                <a href="/admin/patients" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-arrow-right me-1"></i>Batafsil
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 animate-fade-in" style="animation-delay: 0.2s">
            <div class="stat-card">
                <div class="icon-box bg-success bg-opacity-10 text-success">
                    <i class="bi bi-clipboard2-pulse-fill"></i>
                </div>
                <div class="stat-label">Jami Tashxislar</div>
                <div class="stat-value">{{stats.diagnoses}}</div>
                <a href="/admin/diagnoses" class="btn btn-sm btn-outline-success">
                    <i class="bi bi-arrow-right me-1"></i>Batafsil
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 animate-fade-in" style="animation-delay: 0.3s">
            <div class="stat-card">
                <div class="icon-box bg-info bg-opacity-10 text-info">
                    <i class="bi bi-person-badge-fill"></i>
                </div>
                <div class="stat-label">Shifokorlar</div>
                <div class="stat-value">{{stats.doctors}}</div>
                <a href="/admin/users?status=approved" class="btn btn-sm btn-outline-info">
                    <i class="bi bi-arrow-right me-1"></i>Ko'rish
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 animate-fade-in" style="animation-delay: 0.4s">
            <div class="stat-card" style="border-left: 4px solid #f59e0b;">
                <div class="icon-box bg-warning bg-opacity-10 text-warning">
                    <i class="bi bi-hourglass-split"></i>
                </div>
                <div class="stat-label">Kutayotganlar</div>
                <div class="stat-value">{{stats.pendingUsers}}</div>
                <a href="/admin/users?status=pending" class="btn btn-sm btn-warning text-white">
                    <i class="bi bi-check2-all me-1"></i>Tasdiqlash
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 animate-fade-in" style="animation-delay: 0.5s">
            <div class="stat-card">
                <div class="icon-box bg-secondary bg-opacity-10 text-secondary">
                    <i class="bi bi-capsule-pill"></i>
                </div>
                <div class="stat-label">Dorilar</div>
                <div class="stat-value">{{stats.drugs}}</div>
                <a href="/admin/drugs" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-right me-1"></i>Batafsil
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 animate-fade-in" style="animation-delay: 0.6s">
            <div class="stat-card">
                <div class="icon-box bg-dark bg-opacity-10 text-dark">
                    <i class="bi bi-person-check-fill"></i>
                </div>
                <div class="stat-label">Jami Foydalanuvchilar</div>
                <div class="stat-value">{{stats.users}}</div>
                <a href="/admin/users" class="btn btn-sm btn-outline-dark">
                    <i class="bi bi-arrow-right me-1"></i>Batafsil
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12">
            <div class="data-card animate-fade-in" style="animation-delay: 0.7s">
                <div class="card-header">
                    <h5><i class="bi bi-lightning-fill text-warning"></i> Tezkor harakatlar</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a href="/admin/users?status=pending" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-person-check d-block fs-4 mb-2"></i>
                                Shifokorlarni tasdiqlash
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/admin/patients" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-search d-block fs-4 mb-2"></i>
                                Bemor qidirish
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/admin/drugs" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-plus-circle d-block fs-4 mb-2"></i>
                                Dori qo'shish
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/admin/patients/export" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-file-earmark-excel d-block fs-4 mb-2"></i>
                                Excel export
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('currentDate').innerText = new Date().toLocaleDateString('uz-UZ', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
</script>