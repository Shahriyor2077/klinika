{{> admin-sidebar activePage="inventory"}}

<div class="main-content">
    {{> alerts}}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0"><i class="bi bi-box-seam me-2"></i>Ombor</h2>
        <div class="d-flex gap-2">
            <a href="/admin/inventory?type=drug"
                class="btn {{#eq type 'drug'}}btn-primary{{else}}btn-outline-primary{{/eq}}">
                <i class="bi bi-capsule me-1"></i>Dorilar
            </a>
            <a href="/admin/inventory?type=food"
                class="btn {{#eq type 'food'}}btn-success{{else}}btn-outline-success{{/eq}}">
                <i class="bi bi-basket me-1"></i>Oziq-ovqat
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header {{#eq type 'food'}}bg-success{{else}}bg-primary{{/eq}} text-white">
                    <h6 class="m-0"><i class="bi bi-plus-circle me-2"></i>Yangi qo'shish</h6>
                </div>
                <div class="card-body">
                    <form action="/admin/inventory/add" method="POST">
                        <input type="hidden" name="type" value="{{type}}">
                        <div class="mb-3">
                            <label class="form-label">Nomi</label>
                            <input type="text" name="name" class="form-control"
                                placeholder="{{#eq type 'drug'}}Dori nomi{{else}}Oziq-ovqat nomi{{/eq}}">
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label">Min yosh</label>
                                <input type="number" name="minAge" class="form-control" value="0" min="0" max="100">
                            </div>
                            <div class="col-6">
                                <label class="form-label">Max yosh</label>
                                <input type="number" name="maxAge" class="form-control" value="100" min="0" max="100">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label">Miqdori</label>
                                <input type="number" name="quantity" class="form-control" min="0">
                            </div>
                            <div class="col-6">
                                <label class="form-label">Birlik</label>
                                <input type="text" name="unit" class="form-control" value="dona">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Yaroqlilik muddati</label>
                            <input type="date" name="expiryDate" class="form-control">
                        </div>
                        <button type="submit"
                            class="btn {{#eq type 'food'}}btn-success{{else}}btn-primary{{/eq}} w-100">
                            <i class="bi bi-plus-lg me-2"></i>Qo'shish
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="m-0">{{#eq type 'food'}}Oziq-ovqat{{else}}Dorilar{{/eq}} omborda ({{length items}} ta)
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Nomi</th>
                                    <th>Miqdori</th>
                                    <th>Yosh chegarasi</th>
                                    <th>Yaroqlilik</th>
                                    <th>Qolgani</th>
                                    <th>Amallar</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each items}}
                                <tr
                                    class="{{#if this.isExpired}}table-danger{{else}}{{#if this.isExpiringSoon}}table-warning{{/if}}{{/if}}">
                                    <td>{{inc @index}}</td>
                                    <td><span class="fw-semibold">{{this.name}}</span></td>
                                    <td><span
                                            class="badge {{#if (lt this.quantity 10)}}bg-danger{{else}}bg-success{{/if}}">{{this.quantity}}
                                            {{this.unit}}</span></td>
                                    <td><span class="badge bg-info">{{this.minAge}}-{{this.maxAge}} yosh</span></td>
                                    <td>{{formatDate this.expiryDate}}</td>
                                    <td><strong>{{this.quantity}}</strong></td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-primary edit-inv-btn"
                                            data-id="{{this._id}}" data-name="{{this.name}}"
                                            data-quantity="{{this.quantity}}" data-unit="{{this.unit}}"
                                            data-expiry="{{formatDate this.expiryDate 'input'}}"
                                            data-minage="{{this.minAge}}" data-maxage="{{this.maxAge}}"><i
                                                class="bi bi-pencil"></i></button>
                                        <form action="/admin/inventory/delete/{{this._id}}?_method=DELETE" method="POST"
                                            class="d-inline">
                                            <button type="button" class="btn btn-sm btn-danger"
                                                data-confirm="O'chirmoqchimisiz?"><i class="bi bi-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">Ombor bo'sh</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Tahrirlash Modal -->
<div class="modal fade" id="editInventoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tahrirlash</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editInventoryForm" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Nomi</label>
                        <input type="text" id="invName" class="form-control" readonly>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="form-label">Miqdori</label>
                            <input type="number" name="quantity" id="invQuantity" class="form-control" min="0" required>
                        </div>
                        <div class="col-6">
                            <label class="form-label">Birlik</label>
                            <input type="text" name="unit" id="invUnit" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yaroqlilik muddati</label>
                        <input type="date" name="expiryDate" id="invExpiry" class="form-control" required>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="form-label">Min yosh</label>
                            <input type="number" name="minAge" id="invMinAge" class="form-control" min="0" max="100">
                        </div>
                        <div class="col-6">
                            <label class="form-label">Max yosh</label>
                            <input type="number" name="maxAge" id="invMaxAge" class="form-control" min="0" max="100">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bekor qilish</button>
                    <button type="submit" class="btn btn-primary">Saqlash</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var editModal = new bootstrap.Modal(document.getElementById('editInventoryModal'));
        document.querySelectorAll('.edit-inv-btn').forEach(function (btn) {
            btn.addEventListener('click', function () {
                document.getElementById('editInventoryForm').action = '/admin/inventory/edit/' + this.dataset.id;
                document.getElementById('invName').value = this.dataset.name;
                document.getElementById('invQuantity').value = this.dataset.quantity;
                document.getElementById('invUnit').value = this.dataset.unit;
                document.getElementById('invExpiry').value = this.dataset.expiry;
                document.getElementById('invMinAge').value = this.dataset.minage;
                document.getElementById('invMaxAge').value = this.dataset.maxage;
                editModal.show();
            });
        });
    });
</script>