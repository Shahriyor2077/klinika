{{> admin-sidebar activePage="users"}}

<div class="main-content">
    {{> alerts}}

    <h2 class="fw-bold mb-4"><i class="bi bi-people-fill me-2"></i>Shifokorlar</h2>

    <!-- Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form action="/admin/users" method="GET" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label small text-muted">Qidirish</label>
                    <input type="text" name="search" class="form-control" placeholder="Ism yoki telefon..."
                        value="{{search}}">
                </div>
                <div class="col-md-4">
                    <label class="form-label small text-muted">Holat</label>
                    <select name="status" class="form-select">
                        <option value="">Barchasi</option>
                        <option value="pending" {{selected status "pending" }}>Kutilmoqda</option>
                        <option value="approved" {{selected status "approved" }}>Tasdiqlangan</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search me-1"></i>Qidirish</button>
                    <a href="/admin/users" class="btn btn-outline-secondary ms-1">Tozalash</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr style="background: #f8fafc;">
                            <th class="ps-4 py-3">Shifokor</th>
                            <th class="py-3">Telefon</th>
                            <th class="py-3">Ish joyi</th>
                            <th class="py-3 text-center">Holat</th>
                            <th class="py-3 text-center">Excel</th>
                            <th class="py-3 text-center">Sana</th>
                            <th class="py-3 text-end pe-4">Amallar</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar me-3"
                                        style="width: 40px; height: 40px; background: linear-gradient(135deg, #4f46e5, #7c3aed); border-radius: 10px; display: flex; align-items: center; justify-content: center; color: #fff; font-weight: 600;">
                                        {{substring this.name 0 1}}
                                    </div>
                                    <div>
                                        <div class="fw-semibold">{{this.name}}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="py-3">
                                <span style="font-family: monospace;">{{this.phone}}</span>
                            </td>
                            <td class="py-3">
                                <span class="text-muted">{{this.address}}</span>
                            </td>
                            <td class="py-3 text-center">
                                {{#if this.is_approved}}
                                <span class="badge rounded-pill"
                                    style="background: #dcfce7; color: #16a34a; padding: 6px 12px;">
                                    <i class="bi bi-check-circle me-1"></i>Tasdiqlangan
                                </span>
                                {{else}}
                                <span class="badge rounded-pill"
                                    style="background: #fef3c7; color: #d97706; padding: 6px 12px;">
                                    <i class="bi bi-clock me-1"></i>Kutilmoqda
                                </span>
                                {{/if}}
                            </td>
                            <td class="py-3 text-center">
                                {{#if this.can_export}}
                                <form action="/admin/users/revoke-export/{{this._id}}" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-success" title="Excel ruxsati bor">
                                        <i class="bi bi-file-earmark-excel"></i>
                                    </button>
                                </form>
                                {{else}}
                                <form action="/admin/users/grant-export/{{this._id}}" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary"
                                        title="Excel ruxsati yo'q">
                                        <i class="bi bi-file-earmark-excel"></i>
                                    </button>
                                </form>
                                {{/if}}
                            </td>
                            <td class="py-3 text-center">
                                <span class="text-muted small">{{formatDate this.created_at}}</span>
                            </td>
                            <td class="py-3 text-end pe-4">
                                <div class="d-flex justify-content-end gap-1">
                                    {{#unless this.is_approved}}
                                    <form action="/admin/users/approve/{{this._id}}" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success" title="Tasdiqlash">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                    {{else}}
                                    <form action="/admin/users/reject/{{this._id}}" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-warning"
                                            title="Bekor qilish">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                    {{/unless}}

                                    <form action="/admin/users/delete/{{this._id}}?_method=DELETE" method="POST"
                                        class="d-inline">
                                        <button type="button" class="btn btn-sm btn-outline-danger" title="O'chirish"
                                            data-confirm="Rostdan o'chirmoqchimisiz?">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="7" class="text-center text-muted py-5">
                                <i class="bi bi-people fs-1 d-block mb-2 opacity-25"></i>
                                Shifokorlar topilmadi
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>